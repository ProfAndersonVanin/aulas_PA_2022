algoritmo "semnome"
// Função : Identificar se um num é positivo, negativo ou igual 0

var
num:inteiro
inicio
escreval("Digite um número: ")
leia(num)

se num = 0 entao
  //VERDADEIRO
  escreval("ZERO")
senao
   //FALSO
   se num > 0 entao
     //VERDADEIRO
     escreval("POSITIVO")
   senao
     //FALSO
     escreval("NEGATIVO")
   fimse
fimse



fimalgoritmo
